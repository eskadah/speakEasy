<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div class='text-center form-group bg-danger'>
          <ul class='list-unstyled'>
            <% @event.errors.full_messages.each do |msg| %>
                <li class = text-danger><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title,:class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :start %><br>
      <%= f.datetime_select :start,{},:class => 'form-group' %>
    </div>

    <div class="form-group">
      <%= f.label :end %><br>
      <%= f.datetime_select :end,{},:class => 'form-group' %>
    </div>

    <div class="form-group">
      <%= f.label :all_day,'All Day *(Overrides Start and End Times)' %><br>
      <%= f.check_box :all_day,:class => 'checkbox-inline' %>
    </div>

    <div class="form-group">
      <%= f.label :comment %><br>
      <%= f.text_area :comment, :class => 'form-control',:cols => 40,:rows => 10 %>
    </div>

    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
<% end %>
